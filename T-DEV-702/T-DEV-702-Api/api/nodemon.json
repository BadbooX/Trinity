{
    "verbose": true,
    "watch": ["src", "prisma"],
    "ext": "ts,json,prisma",
    "ignore": ["src/**/*.spec.ts"],
    "exec": "npx ts-node src/index.ts",
    "execMap": { 
        "ts": "npx ts-node ./src/index.ts",
        "prisma": "npx prisma generate && prisma migrate dev"
    },
    "env": {
        "NODE_ENV": "development"
    }
}